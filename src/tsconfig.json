{
  "compilerOptions": {
    "outDir": "./dist/cjs/",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ES2017",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "strict": true
  }
}
