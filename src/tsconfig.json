{
  "compilerOptions": {
    // Output
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    // User-code
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    // Dependencies
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Source Maps
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true
  },
  "exclude": ["./dist/"]
}
