{
  "workspaces": [
    "src/"
  ],
  "scripts": {
    "// Demo showcasing usage of Vite SSR Plugin": "",
    "demo": "cd examples/vue/ && npm run start",
    "// Build Vite SSR Plugin": "",
    "build": "npm install && npm run tsc:once",
    "// Develop Vite SSR Plugin": "",
    "dev": "npm run tsc:watch",
    "// TypeScript": "",
    "tsc:once": "cd src/ && tsc",
    "tsc:watch": "cd src/ && tsc --watch --preserveWatchOutput",
    "// Release new version": "",
    "release": "npm run release:clean && npm install && npm run release:build && npm run release:publish",
    "release:clean": "git clean -Xdf",
    "release:build": "npm run tsc:once",
    "release:publish": "cd src/ && npm publish",
    "// Clean": "",
    "clean": "npm run clean:all",
    "clean:all": "git clean -Xdf"
  },
  "// [Hotfix] Manually load es-module-lexer; vite seems to be missing it": "",
  "devDependencies": {
    "@types/es-module-lexer": "^0.3.0",
    "vite": "^2.0.0-beta.60"
  }
}
