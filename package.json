{
  "private": true,
  "// We don't add examples/** nor boilerplates/** to `workspaces` because we have a custom linkage logic": "",
  "workspaces": [
    "vite-plugin-ssr/",
    "docs/",
    "libframe/test/",
    "libframe/docs/",
    "libframe/scripts/"
  ],
  "scripts": {
    "========= Demo": "",
    "demo": "cd examples/react/ && npm run install && npm run start",
    "========= Docs": "",
    "// Develop website https://vite-plugin-ssr.com": "",
    "docs": "cd libframe/docs/ && yarn dev",
    "// Build website https://vite-plugin-ssr.com for production": "",
    "docs:build": "cd libframe/docs/ && yarn build",
    "========= Test": "",
    "// Run tests": "",
    "test": "cd libframe/test/ && yarn test",
    "// Run `$ yarn test:setup` before running `$ yarn test`": "",
    "test:setup": "yarn clean && yarn install && yarn install:examples && yarn link-src && yarn build",
    "========= Dev": "",
    "// Develop vite-plugin-ssr [Node.js code]": "",
    "dev": "cd vite-plugin-ssr/ && yarn dev",
    "// Develop vite-plugin-ssr [Browser-side code]": "",
    "dev:client": "cd vite-plugin-ssr/ && yarn dev:client",
    "// Run `$ yarn dev:setup` before running `$ yarn dev`": "",
    "dev:setup": "yarn clean && yarn install && yarn install:examples && yarn link-src",
    "========= Build": "",
    "// Build vite-plugin-ssr": "",
    "build": "cd vite-plugin-ssr/ && yarn build",
    "========= Install": "",
    "// Install dependencies of all examples and boilerplates": "",
    "install:examples": "cd libframe/scripts/ && yarn install:examples",
    "// Fetch the libframe/ submodule so that its dependencies are installed as well": "",
    "preinstall": "yarn libframe:submodule",
    "libframe:submodule": "yarn test-windows && yarn libframe:submodule:fetch && yarn libframe:submodule:checkout",
    "test-windows": "echo before && bash -c '[[ \"a\" = \"a\" ]]' && echo a && bash -c '[[ \"a\" = \"a\" ]]' && echo b && bash -c '[[ \"a\" = \"b\" ]]' && echo c || echo end",
    "libframe:submodule:fetch": "bash -c '[[ `git submodule status libframe` == -* ]] && git submodule update --init libframe/ || :'",
    "libframe:submodule:checkout": "bash -c '[[ true && \"$OSTYPE\" != \"msys\" ]] && REV=$(cd libframe/ && git rev-parse HEAD) && (cd libframe/ && git checkout master && git reset --hard $REV) || :'",
    "========= Linkage": "",
    "// Symlink **/node_modules/vite-plugin-ssr/ to /vite-plugin-ssr/": "",
    "link-src": "cd libframe/scripts/ && yarn link-src",
    "// Install **/node_modules/vite-plugin-ssr/ from npm registry": "",
    "unlink-src": "cd libframe/scripts/ && yarn unlink-src",
    "// Symlink **/node_modules/vite/ to local Vite build": "",
    "link-vite": "cd libframe/scripts/ && yarn link-vite",
    "// Install **/node_modules/vite/ from npm registry": "",
    "unlink-vite": "cd libframe/scripts/ && yarn link-vite",
    "========= Upgrade deps": "",
    "// Upgrade all dependencies of all `package.json` that have tests": "",
    "bump": "cd libframe/scripts/ && yarn bump",
    "bump-lockfiles": "cd libframe/scripts/ && yarn bump-lockfiles",
    "========= Release": "",
    "release": "cd libframe/scripts/ && yarn release",
    "========= Clean": "",
    "// Remove all generated files": "",
    "clean": "git clean -Xdf"
  }
}
