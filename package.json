{
  "workspaces": [
    "src/"
  ],
  "scripts": {
    "// Demo showcasing usage of Vite SSR Plugin": "",
    "demo": "cd examples/vue/ && npm run start",
    "// Develop Vite SSR Plugin": "",
    "dev": "npm install && npm run build:ejs:watch",
    "// Build Vite SSR Plugin": "",
    "build": "npm install && npm run build:ejs",
    "build:ejs": "cd src/ && tsc --build",
    "build:ejs:watch": "cd src/ && tsc --build --watch",
    "build:cjs": "cd src/ && tsc --module commonjs --outDir cjs",
    "// Release new version": "",
    "release": "npm run release:clean && npm install && npm run release:build && npm run release:publish",
    "release:clean": "git clean -Xdf",
    "release:build": "npm run build:ejs && npm run build:cjs",
    "release:publish": "cd src/ && npm publish"
  }
}
