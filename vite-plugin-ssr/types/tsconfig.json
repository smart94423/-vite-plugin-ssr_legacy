{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/types/",
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "Node",
    "types": ["vite/client"],
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": [
    "../client/**/*",
    "../node/**/*",
    "../shared/**/*",
    "../utils/**/*",
    "../__internal/**/*",
    "index.ts",
    "index-dreprecated.ts"
  ]
}
