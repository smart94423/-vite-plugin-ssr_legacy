{
  "compilerOptions": {
    "outDir": "./dist/esm/",
    "declaration": true,
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "types": ["vite/client"],
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    // Output
    "noEmitOnError": false,
    "rootDir": "./",
    // Misc
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"]
  },
  "exclude": ["**/*.spec.ts", "**/node_modules", "**/dist/", "**/.*/"]
}
