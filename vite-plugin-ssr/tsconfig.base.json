{
  "compilerOptions": {
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    // Output
    "declaration": true,
    // Composite setttings
    "composite": true,
    "rootDir": "./",
    "noEmitOnError": false,
    // Misc
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["**/*.d.ts", "**/*.spec.ts", "**/node_modules", "**/.*/"]
}
