{
  "compilerOptions": {
    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    // Output
    "declaration": false,
    "noEmitOnError": false,
    "rootDir": "./",
    // Misc
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"]
  },
  "exclude": ["**/*.spec.ts", "**/node_modules", "**/.*/"]
}
