    "@types/node-fetch": "^3.0.2",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "express": "^4.17.1",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "serve": "^12.0.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "vite": "^2.5.10",
    "vite-plugin-mdx": "3.5.6",
    "vite-plugin-ssr": "0.3.2"
  }
