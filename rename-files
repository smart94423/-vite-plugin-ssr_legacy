#!/usr/bin/env zx

import assert from 'assert'

const files = [
'./vite-plugin-ssr/client/router/getPageId.client.ts',
'./vite-plugin-ssr/client/router/getPageByUrl.client.ts',
'./vite-plugin-ssr/client/router/getPageContext.client.ts',
'./vite-plugin-ssr/client/router/useClientRouter.client.ts',
'./vite-plugin-ssr/client/page-files/setup.client.ts',
'./vite-plugin-ssr/client/page-files/pageFiles.client.ts',
'./vite-plugin-ssr/client/getPage.client.ts',
'./vite-plugin-ssr/client/navigationState.client.ts',
]

await Promise.all(files.map(async file => {
  const fileNew = file.replace('.client.ts', '.ts')
  assert(file!==fileNew)
  await $`mv ${file} ${fileNew}`
}))
